	var name = "Steven Patrick Morrissey";

	var scope1 = function () {
		
		console.log(name);
		
		var scope2 = function () {
	  	
	  		console.log(name);
	  	
	  		var scope3 = function () {
	    		console.log(name);
	    		var anotherName = 'Jakob Dylan'; // locally scoped
	  		};
	  	
	  		scope3();
		};
		
		scope2();
	};

